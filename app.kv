#:kivy 1.1.1
#:import hex kivy.utils.get_color_from_hex

#:set board_prim "#795C34"
#:set board_sec "#E4D9CA"
<MainScreen>:
    MDBoxLayout:
        MDLabel:
            text:"Moves\n1.e4 - e5"
            valign: "top"
            halign: "left"
            size_hint_y: 0.8
            pos_hint: {"top":0.9}
            size_hint_x: 0.25
            padding: [10,10,10,10]
            text_size: (self.width - 20, self.height - 20)
            canvas.before:
                Color:
                    rgba: 0.25, 0.27, 0.27, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20,]
        ChessBoard:

<ChessBoard>:
    size_hint_y: 0.8
    pos_hint: {'center-x':0.5,'center-y':0.5}

MainScreen: