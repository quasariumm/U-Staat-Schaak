#:kivy 1.1.1
#:import hex kivy.utils.get_color_from_hex
#:import Svg kivy.graphics.svg.Svg

#:set board_prim "#795C34"
#:set board_sec "#E4D9CA"
<MainScreen>:
    MDBoxLayout:
        MDLabel:
            text:"Moves\n1.e4 - e5"
            valign: "top"
            halign: "left"
            size_hint_y: 0.8
            pos_hint: {"top":0.9}
            size_hint_x: 0.25
            padding: [10,10,10,10]
            text_size: (self.width - 20, self.height - 20)
            canvas.before:
                Color:
                    rgba: 0.25, 0.27, 0.27, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20,]
        ChessBoard:

<ChessBoardSquare>:
    background_normal: ""
    background_down: ""
    image:image
    on_press: self.pressAction()
    Image:
        id:image
        size:self.parent.size
        pos:self.parent.pos
        source:''

<ChessBoard>:
    height: 0.8 * self.parent.parent.height
    width: self.height
    size_hint: None, None
    pos_hint: {"top":0.9}

MainScreen: